        }

        $(function () {
            $("#search").keyup(function (e) {
                //console.log(e);
                if (e.key == "Enter") {

                    //console.log("search", $(this).val());
                    var keyword = $(this).val();
                    window.location = "/Customers/Index?search=" + encodeURI(keyword);
                }
            });
        });
    </script>
