                                                    @switch(item.Type)
                                                    {
                                                        case SupperCRMApplication.Entities.NotifyType.IssueAdded:
                                                            <div class="avatar avatar-sm bg-gradient-secondary  me-3  my-auto">
                                                                <i class="fa fa-check"></i>
                                                            </div>
                                                            break;
                                                        case SupperCRMApplication.Entities.NotifyType.IssueChanged:
                                                            <div class="avatar avatar-sm bg-gradient-primary  me-3  my-auto">
                                                                <i class="fa fa-check"></i>
                                                            </div>
                                                            break;
                                                        case SupperCRMApplication.Entities.NotifyType.IssueCompleted:
                                                            <div class="avatar avatar-sm bg-gradient-success  me-3  my-auto">
                                                                <i class="fa fa-check"></i>
                                                            </div>
                                                            break;
                                                        case SupperCRMApplication.Entities.NotifyType.LeadAdded:
                                                            <div class="avatar avatar-sm bg-gradient-secondary  me-3  my-auto">
                                                                <i class="material-icons opacity-10">group_work</i>
                                                            </div>
                                                            break;
                                                        case SupperCRMApplication.Entities.NotifyType.LeadChanged:
                                                            <div class="avatar avatar-sm bg-gradient-primary  me-3  my-auto">
                                                                <i class="material-icons opacity-10">group_work</i>
                                                            </div>
                                                            break;
                                                        case SupperCRMApplication.Entities.NotifyType.LeadCompleted:
                                                            <div class="avatar avatar-sm bg-gradient-success  me-3  my-auto">
                                                                <i class="material-icons opacity-10">group_work</i>
                                                            </div>
                                                            break;
                                                        default:
                                                            break;
                                                    }

                                                    <div class="d-flex flex-column justify-content-center">
                                                        <h6 class="text-sm font-weight-normal mb-1">
                                                            <span class="font-weight-bold">@item.Text</span>
                                                        </h6>
                                                        <p class="text-xs text-secondary mb-0">
                                                            <i class="fa fa-clock me-1"></i>
                                                            @item.CreatedAt
                                                        </p>
                                                    </div>
                                                </div>
                                            </a>
                                        </li>
                                    }
                                    
                                    <li class="mb-2">
                                        <a class="dropdown-item border-radius-md"
                                       href="javascript:;">
                                            <div class="d-flex py-1">
                                                <div class="my-auto">
                                                    <img src="~/assets/img/small-logos/logo-spotify.svg"
                                                     class="avatar avatar-sm bg-gradient-dark me-3" />
                                                </div>
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="text-sm font-weight-normal mb-1">
                                                        <span class="font-weight-bold">New album</span> by
                                                        Travis Scott
                                                    </h6>
                                                    <p class="text-xs text-secondary mb-0">
                                                        <i class="fa fa-clock me-1"></i>
                                                        1 day
                                                    </p>
                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item border-radius-md"
                                       href="javascript:;">
                                            <div class="d-flex py-1">
                                                <div class="avatar avatar-sm bg-gradient-secondary me-3 my-auto">
                                                    <svg width="12px"
                                                     height="12px"
                                                     viewBox="0 0 43 36"
                                                     version="1.1"
                                                     xmlns="http://www.w3.org/2000/svg"
                                                     xmlns:xlink="http://www.w3.org/1999/xlink">
                                                        <title>credit-card</title>
                                                        <g stroke="none"
                                                       stroke-width="1"
                                                       fill="none"
                                                       fill-rule="evenodd">
                                                            <g transform="translate(-2169.000000, -745.000000)"
                                                           fill="#FFFFFF"
                                                           fill-rule="nonzero">
                                                                <g transform="translate(1716.000000, 291.000000)">
                                                                    <g transform="translate(453.000000, 454.000000)">
                                                                        <path class="color-background"
                                                                          d="M43,10.7482083 L43,3.58333333 C43,1.60354167 41.3964583,0 39.4166667,0 L3.58333333,0 C1.60354167,0 0,1.60354167 0,3.58333333 L0,10.7482083 L43,10.7482083 Z"
                                                                          opacity="0.593633743"></path>
                                                                        <path class="color-background"
                                                                          d="M0,16.125 L0,32.25 C0,34.2297917 1.60354167,35.8333333 3.58333333,35.8333333 L39.4166667,35.8333333 C41.3964583,35.8333333 43,34.2297917 43,32.25 L43,16.125 L0,16.125 Z M19.7083333,26.875 L7.16666667,26.875 L7.16666667,23.2916667 L19.7083333,23.2916667 L19.7083333,26.875 Z M35.8333333,26.875 L28.6666667,26.875 L28.6666667,23.2916667 L35.8333333,23.2916667 L35.8333333,26.875 Z"></path>
                                                                    </g>
                                                                </g>
                                                            </g>
                                                        </g>
                                                    </svg>
                                                </div>
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="text-sm font-weight-normal mb-1">
                                                        Payment successfully completed
                                                    </h6>
                                                    <p class="text-xs text-secondary mb-0">
                                                        <i class="fa fa-clock me-1"></i>
                                                        2 days
                                                    </p>
                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item pe-2 d-flex align-items-center">
                                <a asp-action="Profile" asp-controller="Account"
                               class="nav-link text-body font-weight-bold px-0">
                                    <i class="fa fa-user me-sm-1"></i>
                                    <span class="d-sm-inline d-none ">@name</span>
                                </a>
                            </li>
                            <li class="nav-item pe-2 d-flex align-items-center">
                                <a asp-action="SignOut" asp-controller="Account"
                               class="nav-link text-body font-weight-bold px-0">
                                    <i class="fa fa-sign-out me-sm-1"></i>
                                    <span class="d-sm-inline d-none">Çıkış</span>
                                </a>
                            </li>

                            <li class="nav-item d-xl-none ps-3 d-flex align-items-center">
                                <a href="javascript:;"
                               class="nav-link text-body p-0"
                               id="iconNavbarSidenav">
                                    <div class="sidenav-toggler-inner">
                                        <i class="sidenav-toggler-line"></i>
                                        <i class="sidenav-toggler-line"></i>
                                        <i class="sidenav-toggler-line"></i>
                                    </div>
                                </a>
                            </li>
}
else
                        {
                            
                        }

                    </ul>
                </div>
            </div>
        </nav>

        <!-- End Navbar -->

        <div class="container-fluid py-4">
            @RenderBody()

            <footer class="footer py-4">
                <div class="container-fluid">
                    <div class="row align-items-center justify-content-lg-between">
                        <div class="col-lg-6 mb-lg-0 mb-4">
                            <div class="copyright text-center text-sm text-muted text-lg-start">
                                ©
                                @DateTime.Now.Year
                                <b class="ms-2">Supper CRM</b>
                            </div>
                        </div>
                        <div class="col-lg-6">
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </main>

    <!--   Core JS Files   -->
    <script src="~/assets/js/plugins/jquery/jquery.min.js"></script>
    <script src="~/assets/js/core/popper.min.js"></script>
    <script src="~/assets/js/core/bootstrap.min.js"></script>
    <script src="~/assets/js/plugins/perfect-scrollbar.min.js"></script>
    <script src="~/assets/js/plugins/smooth-scrollbar.min.js"></script>
    <script src="~/assets/js/plugins/toastr/toastr.min.js"></script>
    <script>
        var win = navigator.platform.indexOf("Win") > -1;
        if (win && document.querySelector("#sidenav-scrollbar")) {
            var options = {
                damping: "0.5",
            };
            Scrollbar.init(document.querySelector("#sidenav-scrollbar"), options);
        }
    </script>

    <!-- Github buttons -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>

    <!-- Control Center for Material Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="~/assets/js/material-dashboard.min.js" asp-append-version="true"></script>
    <script src="~/assets/js/scripts.min.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts",required:false)
</body>

</html>
