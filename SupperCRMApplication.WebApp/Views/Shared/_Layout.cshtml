                                    @foreach (var item in notifies)
                                    {
                                        string url = "/";

                                        switch(item.Type)
                                        {
                                            case SupperCRMApplication.Entities.NotifyType.IssueAdded:
                                            case SupperCRMApplication.Entities.NotifyType.IssueChanged:
                                            case SupperCRMApplication.Entities.NotifyType.IssueCompleted:
                                                url = Url.Action("Index", "Issues");
                                                break;
                                            case SupperCRMApplication.Entities.NotifyType.LeadAdded:
                                            case SupperCRMApplication.Entities.NotifyType.LeadChanged:
                                            case SupperCRMApplication.Entities.NotifyType.LeadCompleted:
                                                url = Url.Action("Index", "Leads");
                                                break;
                                            default:
                                                break;
                                        }
