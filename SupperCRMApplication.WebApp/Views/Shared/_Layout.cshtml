
@*inject Sayfa açıldığında notifyServicein datalarını veriyor*@

@inject SupperCRMApplication.Services.INotifyService _notifyService 
@{
    string GetNavActiveCssClass(string pageName){
        string cssClass = string.Empty;

        if (ViewData["PageName"] != null)
        {
            cssClass = (ViewData["PageName"].ToString() == pageName) ? "active bg-gradient-primary" : "";
        }
        return cssClass;
    }
    //login olup olmadığını anlamak için istiyoruz.
    bool isLogged = ViewContext.HttpContext.Session.GetInt32(Constants.Session_Id) != null;
    string name = isLogged ? ViewContext.HttpContext.Session.GetString(Constants.Session_Name): string.Empty;
    int userId = isLogged ? ViewContext.HttpContext.Session.GetInt32(Constants.Session_Id).Value: -1;
    var notifies = isLogged ? _notifyService.ListByUserId(userId, false).Take(5) : new List<SupperCRMApplication.Entities.Notify>();
}

<!DOCTYPE html>
<html lang="en">

<head>
